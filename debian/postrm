#!/bin/sh
# postrm script
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postrm> `remove'
#        * <postrm> `purge'
#        * <old-postrm> `upgrade' <new-version>
#        * <new-postrm> `failed-upgrade' <old-version>
#        * <new-postrm> `abort-install'
#        * <new-postrm> `abort-install' <old-version>
#        * <new-postrm> `abort-upgrade' <old-version>
#        * <disappearer's-postrm> `disappear' <overwriter>
#          <overwriter-version>
# for details, see https://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    purge|remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
    ;;
    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac


# Disable default templates
if [ -d /run/systemd/system ]; then
	systemctl --system daemon-reload >/dev/null || true
fi
if [ "$1" = "remove" ]; then
	systemctl mask 'docker-compose-refresh@etc-docker\x2dcompose' >/dev/null || true
	systemctl mask 'docker-compose@etc-docker\x2dcompose' >/dev/null || true
fi
if [ "$1" = "purge" ]; then
	systemctl disable 'docker-compose-refresh@etc-docker\x2dcompose' >/dev/null || true
	systemctl unmask 'docker-compose-refresh@etc-docker\x2dcompose' >/dev/null || true
	systemctl disable 'docker-compose@etc-docker\x2dcompose' >/dev/null || true
	systemctl unmask 'docker-compose@etc-docker\x2dcompose' >/dev/null || true
fi

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0

