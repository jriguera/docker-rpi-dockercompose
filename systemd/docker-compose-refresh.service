[Unit]
Description=Docker system compose refresh and reload target
StopWhenUnneeded=true
Requires=network.target docker.service docker-compose.target
Wants=network.target docker.service docker-compose.target multi-user.target cloud-init.target
After=network.target docker.service docker-compose.target multi-user.target cloud-init.target
ConditionFileIsExecutable=/usr/bin/docker
ConditionFileIsExecutable=/usr/bin/system-docker-compose

[Service]
# The dummy program will exit
Type=oneshot
# Execute a dummy program
ExecStart=/bin/true

[Install]
Also=docker-compose-refresh.timer

